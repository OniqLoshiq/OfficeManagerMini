@model OMM.App.Areas.Management.Models.InputModels.AssetCreateInputModel

@{
    ViewData["Title"] = "Create Asset";
}

<h4 class="mb-3 text-center">Create Asset</h4>
<hr class="hr-oom" style="width:300px;" />

<form asp-area="Management" asp-controller="Assets" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="d-flex justify-content-center">
        <div class="form-row w-75 management">
            <div class="col-12">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="InventoryNumber"></label>
                        <input class="form-control" asp-for="InventoryNumber" placeholder="Inventory number">
                        <span asp-validation-for="InventoryNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="AssetTypeId"></label>
                        <select class="form-control" asp-for="AssetTypeId">
                            <option selected disabled>--Choose asset's type--</option>
                            <vc:asset-type-select-list></vc:asset-type-select-list>
                        </select>
                        <span asp-validation-for="AssetTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label asp-for="Make"></label>
                        <input class="form-control" asp-for="Make" placeholder="Make">
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label asp-for="Model"></label>
                        <input class="form-control" asp-for="Model" placeholder="Model">
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label asp-for="ReferenceNumber"></label>
                        <input class="form-control" asp-for="ReferenceNumber" placeholder="Reference number">
                        <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4 flatpickrcontainer">
                        <label asp-for="DateOfAquire">Aquired on</label>
                        <div class="input-group">
                            <input class="form-control" asp-for="DateOfAquire" data-input>
                            <div class="input-group-prepend">
                                <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                        <span asp-validation-for="DateOfAquire" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-8">
                        <label asp-for="EmployeeId"></label>
                        <div class="input-group">
                            <select class="form-control selectpicker show-tick" asp-for="EmployeeId" data-style="btn-white" data-live-search="true" data-width="auto">
                                <option selected disabled></option>
                                <vc:department-employees-list></vc:department-employees-list>
                            </select>
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="hr-oom w-25" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-warning">Create</button>
    </div>
    <hr class="hr-oom w-25" />
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}