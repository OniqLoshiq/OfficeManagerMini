@model IEnumerable<OMM.App.Areas.Management.Models.ViewModels.AssetsListAllViewModel>

@{
    ViewData["Title"] = "All Assets";
}

<h4 class="mb-3 text-center">Company Assets</h4>
<hr class="hr-oom" style="width:300px;" />

<table id="myDataTable" class="display table-sm table table-striped table-light table-hover table-bordered" style="width:100%">
    <thead class="bg-warning">
        <tr>
            <th scope="col">Inv. number</th>
            <th scope="col">Type</th>
            <th scope="col">Make</th>
            <th scope="col">Model</th>
            <th scope="col">Ref. number</th>
            <th scope="col">Employee</th>
            <th scope="col">Aquired On</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model)
        {
            <tr>
                <td>@asset.InventoryNumber</td>
                <td>@asset.AssetType</td>
                <td>@asset.Make</td>
                <td>@asset.Model</td>
                <td>@asset.ReferenceNumber</td>
                <td>@asset.EmployeeFullName</td>
                <td>@asset.DateOfAquire</td>
                <td class="d-flex justify-content-center">
                    <a class="btn px-1 py-0" asp-area="Management" asp-controller="Assets" asp-action="Edit" asp-route-id="@asset.Id" role="button" style="font-size: 16px;" title="Edit">
                        <i class="fas fa-edit text-success"></i>
                    </a>
                    <button type="button" class="btn px-1 py-0" style="font-size: 16px;" data-toggle="modal" data-target="#deleteAsset" title="Remove">
                        <i class="far fa-trash-alt text-danger"></i>
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteAsset" tabindex="-1" role="dialog" aria-labelledby="deleteAsset" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteAssetModalLongTitle">Remove Asset</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to remove this asset?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                    <a class="btn btn-outline-success" asp-area="Management" asp-controller="Assets" asp-action="Delete" asp-route-id="@asset.Id">Remove asset</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
    <script src="~/js/run-dataTable.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.colVis.min.js"></script>
}

