@model  OMM.App.Areas.Management.Models.ViewModels.EmployeeEditViewModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h4 class="mb-3 text-center">Edit Employee's Information</h4>
<hr class="hr-oom" style="width:300px;" />

<div class="d-flex justify-content-center empl-rel mb-3">
    <img src="@Model.ProfilePicture" alt="avatar" class="rounded img-thumbnail">
</div>

<form asp-area="Management" asp-controller="Employees" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row management">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="MiddleName"></label>
                    <input type="text" class="form-control" asp-for="MiddleName">
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="LastName"></label>
                    <input type="text" class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input type="text" class="form-control" asp-for="FullName">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label asp-for="DateOfBirth"></label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="DateOfBirth" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PersonalPhoneNumber"></label>
                    <input type="tel" class="form-control" asp-for="PersonalPhoneNumber">
                    <span asp-validation-for="PersonalPhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureNew"></label>
                <input type="file" class="form-control" asp-for="ProfilePictureNew">
            </div>
        </div>
        <div class="form-group col-md-6 company-data px-3">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DepartmentId"></label>
                    <vc:departments-list department-id="@Model.DepartmentId"></vc:departments-list>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Position"></label>
                    <input type="text" class="form-control" asp-for="Position">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label asp-for="AppointedOn"></label>
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="AppointedOn" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                    <span asp-validation-for="AppointedOn" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PhoneNumber">Phone number</label>
                    <input type="tel" class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-3 px-0">
                <label asp-for="AccessLevel"></label>
                <select class="form-control" asp-for="AccessLevel">
                    <option selected disabled>@Model.AccessLevel</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option>@i</option>
                    }
                </select>
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between mt-2">
                    <a asp-area="Management" asp-controller="Employees" asp-action="All" class="btn btn-outline-secondary">Back</a>
                    <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#editInfo">Edit Information</button>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="editInfo" tabindex="-1" role="dialog" aria-labelledby="editEmployeeInformation" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editInfoModalLongTitle">Edit Employee's Information</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to change this information?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-outline-success">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}
