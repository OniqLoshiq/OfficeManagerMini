@model OMM.App.Areas.Management.Models.ViewModels.EmployeeReleaseViewModel

@{
    ViewData["Title"] = "Release Employee";
}

<h4 class="mb-3 text-center">Release Employee</h4>
<hr class="hr-oom" style="width:300px;" />

<div class="d-flex justify-content-center empl-rel mb-3">
    <img src="@Model.ProfilePicture" alt="avatar" class="rounded img-thumbnail">
</div>

<form asp-area="Management" asp-controller="Employees" asp-action="Release" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row management empl-rel">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName" disabled>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="MiddleName">Middle name</label>
                    <input type="text" class="form-control" asp-for="MiddleName" disabled>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="LastName">Last name</label>
                    <input type="text" class="form-control" asp-for="LastName" disabled>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName">Full name</label>
                <input type="text" class="form-control" asp-for="FullName" disabled>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DateOfBirth"></label>
                    <input type="text" class="form-control" asp-for="DateOfBirth" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PersonalPhoneNumber"></label>
                    <input type="tel" class="form-control" asp-for="PersonalPhoneNumber" disabled>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6 company-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-10">
                    <label asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email" disabled>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="AccessLevel"></label>
                    <input type="text" class="form-control" asp-for="AccessLevel" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DepartmentName"></label>
                    <input type="text" class="form-control" asp-for="DepartmentName" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Position"></label>
                    <input type="text" class="form-control" asp-for="Position" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="AppointedOn"></label>
                    <input type="text" class="form-control" asp-for="AppointedOn" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PhoneNumber"></label>
                    <input type="tel" class="form-control" asp-for="PhoneNumber" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label asp-for="LeftOn"></label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="empl-rel-border" asp-for="LeftOn" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text emp-rel-color"><i class="fa fa-calendar text-white"></i></div>
                        </div>
                    </div>
                    <span asp-validation-for="LeftOn" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="LeavingReasonId"></label>
                    <vc:leaving-reasons-list leaving-reason-id="@Model.LeavingReasonId"></vc:leaving-reasons-list>
                </div>
                <span asp-validation-for="LeavingReasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between mt-2">
                    <a asp-area="Management" asp-controller="Employees" asp-action="All" class="btn btn-outline-secondary">Back</a>
                    <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#removeEmpl">Remove Employee</button>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="removeEmpl" tabindex="-1" role="dialog" aria-labelledby="removeEmployee" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="removeEmplModalLongTitle">Remove Employee</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to release this employee?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-outline-success">Release employee</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<hr class="hr-oom mt-3" style="width:300px;" />
<h5 class="mb-3 text-center empl-rel-items">
    <button type="button" class="btn btn-secondary btn-sm" data-toggle="collapse" data-target="#collapseReleasedItems" aria-expanded="false" aria-controls="collapseReleasedItems">
        Items to be released
    </button>
</h5>
<hr class="hr-oom" style="width:300px;" />

<partial name="_EmplyeeAssetsPartial" model="@Model.Items" />


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/change-realse-dropboreder.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/run-dataTable.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.colVis.min.js"></script>
}

