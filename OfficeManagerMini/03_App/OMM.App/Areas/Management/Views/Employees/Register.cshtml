@model OMM.App.Areas.Management.Models.InputModels.EmployeeRegisterInputModel

@{
    ViewData["Title"] = "Register Employee";
}

<h4 class="mb-3 text-center">Register a new Employee</h4>
<hr class="hr-oom" style="width:300px;" />

<form asp-area="Management" asp-controller="Employees" asp-action="Register" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row management">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label asp-for="FirstName"></label>
                    <input class="form-control" asp-for="FirstName" placeholder="First name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="MiddleName"></label>
                    <input class="form-control" asp-for="MiddleName" placeholder="Middle name">
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="LastName"></label>
                    <input class="form-control" asp-for="LastName" placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input class="form-control" asp-for="FullName" placeholder="Full name">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label asp-for="DateOfBirth"></label>
                    <div class="input-group">
                        <input class="form-control" asp-for="DateOfBirth" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PersonalPhoneNumber"></label>
                    <input class="form-control" asp-for="PersonalPhoneNumber" placeholder="Pers. phone number">
                    <span asp-validation-for="PersonalPhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePicture"></label>
                <input class="form-control" type="file" asp-for="ProfilePicture">
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-6 company-data px-3">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DepartmentId"></label>
                        <vc:departments-list department-id="0"></vc:departments-list>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Position"></label>
                    <input class="form-control" asp-for="Position" placeholder="Position">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label asp-for="AppointedOn"></label>
                    <div class="input-group">
                        <input class="form-control" asp-for="AppointedOn" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                    <span asp-validation-for="AppointedOn" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PhoneNumber"></label>
                    <input class="form-control" asp-for="PhoneNumber" placeholder="Phone number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-lg-3 px-0">
                <label asp-for="AccessLevel">Access level</label>
                <select class="form-control" asp-for="AccessLevel">
                    <option selected disabled>0</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-end mt-2">
                    <button type="submit" class="btn btn-outline-warning">Register Employee</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}