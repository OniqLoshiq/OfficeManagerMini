
@{
    ViewData["Title"] = "Register Employee";
}

<h4 class="mb-3 text-center">Register a new Employee</h4>
<hr class="hr-oom" style="width:300px;" />

<form>
    <div class="form-row management">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" id="firstName" placeholder="First name">
                </div>
                <div class="form-group col-lg-4">
                    <label for="middleName">Middle name</label>
                    <input type="text" class="form-control" id="middleName" placeholder="Middle name">
                </div>
                <div class="form-group col-lg-4">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Last name">
                </div>
            </div>
            <div class="form-group">
                <label for="fullName">Full name</label>
                <input type="text" class="form-control" id="fullName" placeholder="Full name">
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label for="dateOfBirth">Date of birth</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="dateOfBirth" name="dateOfBirth" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="personalPhoneNumber">Pers. phone number</label>
                    <input type="tel" class="form-control" id="personalPhoneNumber" placeholder="Pers. phone number">
                </div>
            </div>
            <div class="form-group">
                <label for="profilePicture">Profile picture</label>
                <input type="text" class="form-control" id="profilePicture" placeholder="Select profile picture">
            </div>
        </div>
        <div class="form-group col-md-6 company-data px-3">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email">
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="department">Department</label>
                    <select class="form-control" id="department">
                        <option selected disabled>--Choose department--</option>
                        <option>Management board</option>
                        <option>Administration</option>
                        <option>Accounting</option>
                        <option>Engineering</option>
                        <option>HR</option>
                    </select>
                </div>
                <div class="form-group col-lg-6">
                    <label for="position">Position</label>
                    <input type="text" class="form-control" id="position" placeholder="Position">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label for="appointedOn">Appointed on</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="appointedOn" name="appointedOn" data-input>
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="phoneNumber">Phone number</label>
                    <input type="tel" class="form-control" id="phoneNumber" placeholder="Phone number">
                </div>
            </div>
            <div class="form-group col-lg-3 px-0">
                <label for="accessLevel">Access level</label>
                <select class="form-control" id="accessLevel" name="accessLevel">
                    <option selected disabled>0</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option>@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
            <div class="d-flex justify-content-end mt-2">
                <button type="submit" class="btn btn-outline-warning">Register Employee</button>
            </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}