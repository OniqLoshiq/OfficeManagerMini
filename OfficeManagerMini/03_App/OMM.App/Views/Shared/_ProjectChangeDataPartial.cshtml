@model OMM.App.Models.ViewModels.ProjectDetailsChangeViewModel

    <div class="modal fade" id="projectChangeData" tabindex="-1" role="dialog" aria-labelledby="projectChangeDataScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="projectChangeDataScrollableTitle">Update Project Status</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Projects" asp-action="ChangeData" method="post">
                        <div class="form-group flatpickrcontainer">
                            <label asp-for="Deadline"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" asp-for="Deadline" data-input>
                                <div class="input-group-prepend">
                                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group flatpickrcontainer">
                            <label asp-for="EndDate"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" asp-for="EndDate" data-input>
                                <div class="input-group-prepend">
                                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <div>
                                <label asp-for="StatusId"></label>
                            </div>
                            <vc:statuses-list status-id="@Model.StatusId"></vc:statuses-list>
                        </div>
                        <div class="form-group">
                            <label asp-for="Progress">Project progress: <span class="badge badge-info"><output name="progressOutput" id="progressOutput">@Model.Progress</output>%</span></label>
                            <input type="range" class="custom-range" asp-for="Progress" value="@(Model.Progress)" min="0" max="100" oninput="progressOutput.value = Progress.value">
                            <input type="hidden" value="@Model.Id" name="Id" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success forgot-password">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
