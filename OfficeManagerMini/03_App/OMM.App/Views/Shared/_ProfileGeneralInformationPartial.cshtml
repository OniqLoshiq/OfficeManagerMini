@model OMM.App.Models.ViewModels.EmployeeProfileViewModel

<form>
    <div class="form-row profile-gen-info">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName" disabled>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="MiddleName"></label>
                    <input type="text" class="form-control" asp-for="MiddleName" disabled>
                </div>
                <div class="form-group col-lg-4">
                    <label asp-for="LastName"></label>
                    <input type="text" class="form-control" asp-for="LastName" disabled>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName"></label>
                <input type="text" class="form-control" asp-for="FullName" disabled>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DateOfBirth"></label>
                    <input type="text" class="form-control" asp-for="DateOfBirth" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="AppointedOn"></label>
                    <input type="text" class="form-control" asp-for="AppointedOn" disabled>
                </div>
            </div>
        </div>
        <div class="form-group col-md-6 px-3">
            <div class="form-row">
                <div class="form-group col-lg-10">
                    <label asp-for="Email"></label>
                    <input type="text" class="form-control" asp-for="Email" disabled>
                </div>
                <div class="form-group col-lg-2">
                    <label asp-for="AccessLevel"></label>
                    <input type="text" class="form-control" asp-for="AccessLevel" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="DepartmentName"></label>
                    <input type="text" class="form-control" asp-for="DepartmentName" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="Position"></label>
                    <input type="text" class="form-control" asp-for="Position" disabled>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label asp-for="PersonalPhoneNumber"></label>
                    <input type="text" class="form-control" asp-for="PersonalPhoneNumber" disabled>
                </div>
                <div class="form-group col-lg-6">
                    <label asp-for="PhoneNumber"></label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" disabled>
                </div>
            </div>
        </div>
    </div>
</form>

