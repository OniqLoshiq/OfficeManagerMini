
@{
    ViewData["Title"] = "Edit Employee";
}

<h4 class="mb-3 text-center">Edit Employee's Information</h4>
<hr class="hr-oom" style="width:300px;" />

<form>
    <div class="form-row management">
        <div class="form-group col-md-6 personal-data px-3">
            <div class="form-row">
                <div class="form-group col-lg-4">
                    <label for="firstName">First name</label>
                    <input type="text" class="form-control" id="firstName" value="Oniq">
                </div>
                <div class="form-group col-lg-4">
                    <label for="middleName">Middle name</label>
                    <input type="text" class="form-control" id="middleName" value="Dokka">
                </div>
                <div class="form-group col-lg-4">
                    <label for="lastName">Last name</label>
                    <input type="text" class="form-control" id="lastName" value="Loshiq">
                </div>
            </div>
            <div class="form-group">
                <label for="fullName">Full name</label>
                <input type="text" class="form-control" id="fullName" value="Oniq D. Loshiq">
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label for="dateOfBirth">Date of birth</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="dateOfBirth" name="dateOfBirth" data-input value="01-12-1999">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="personalPhoneNumber">Pers. phone number</label>
                    <input type="tel" class="form-control" id="personalPhoneNumber" value="8888888888">
                </div>
            </div>
            <div class="form-group">
                <label for="profilePicture">Profile picture</label>
                <input type="text" class="form-control" id="profilePicture" value="some link dsgldsf gdhfg;dfgj dfg;dfg">
            </div>
        </div>
        <div class="form-group col-md-6 company-data px-3">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" value="oniqloshiq@ludnica.com">
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="department">Department</label>
                    <select class="form-control" id="department">
                        <option selected>Management board</option>
                        <option>Management board</option>
                        <option>Administration</option>
                        <option>Accounting</option>
                        <option>Engineering</option>
                        <option>HR</option>
                    </select>
                </div>
                <div class="form-group col-lg-6">
                    <label for="position">Position</label>
                    <input type="text" class="form-control" id="position" value="Web Dev">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-lg-6 flatpickrcontainer">
                    <label for="appointedOn">Appointed on</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="appointedOn" name="appointedOn" data-input value="18-07-2019">
                        <div class="input-group-prepend">
                            <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group col-lg-6">
                    <label for="phoneNumber">Phone number</label>
                    <input type="tel" class="form-control" id="phoneNumber" value="9999999999">
                </div>
            </div>
            <div class="form-group col-lg-3 px-0">
                <label for="accessLevel">Access level</label>
                <select class="form-control" id="accessLevel" name="accessLevel">
                    <option selected>10</option>
                    @for (int i = 1; i <= 10; i++)
                    {
                        <option>@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-end mt-2">
                    <button type="button" class="btn btn-outline-warning" data-toggle="modal" data-target="#editInfo">Edit Information</button>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="editInfo" tabindex="-1" role="dialog" aria-labelledby="editEmployeeInformation" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editInfoModalLongTitle">Edit Employee's Information</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to change this information?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-outline-success">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}
