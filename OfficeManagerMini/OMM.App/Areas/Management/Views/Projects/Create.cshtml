@{
    ViewData["Title"] = "Create Project";
}


<h4 class="mb-3 text-center">Create Project</h4>
<hr class="hr-oom" style="width:300px;" />

<form>
    <div class="form-row">
        <div class="form-group col-md-6 mb-0">
            <label class="sr-only" for="Name">Name</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning text-secondary"><strong>Name</strong></div>
                </div>
                <input type="text" class="form-control" id="Name" placeholder="Name of the project">
            </div>
        </div>
        <div class="form-group col-md-6 mb-0">
            <label class="sr-only" for="Clinet">Client</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning text-secondary"><strong>Client</strong></div>
                </div>
                <input type="text" class="form-control" id="Client" placeholder="Client name">
            </div>
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-group">
        <label for="mytextarea">Description</label>
        <textarea id="mytextarea"></textarea>
    </div>
    <hr class="hr-oom" />
    <div class="form-row">
        <div class="form-group col-md-3 mb-0">
            <label for="status">Status</label>
            <select class="form-control" id="status">
                <option selected>In Process</option>
                <option>Frozen</option>
                <option>Waiting</option>
                <option>Delayed</option>
                <option>Completed</option>
            </select>
        </div>
        <div class="form-group col-md-4 flatpickrcontainer mb-0">
            <label for="createdOn">Creating Date</label>
            <div class="input-group">
                <input type="text" class="form-control" id="createdOn" name="createdOn" data-input>
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-4 flatpickrcontainer mb-0">
            <label for="deadline">Deadline</label>
            <div class="input-group">
                <input type="text" class="form-control" id="deadline" name="deadline" data-input>
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-1 mb-0">
            <label for="priority">Priority</label>
            <select class="form-control" id="priority" name="priority">
                <option selected disabled>0</option>
                @for (int i = 1; i <= 10; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-row">
        <div class="form-group col mb-0">
            <label for="progressInput">Project progress: <span class="badge badge-info"><output name="progressOutput" id="progressOutput">0</output>%</span></label>
            <input type="range" class="custom-range" id="progressInput" name="progress" value="0" min="0" max="100" oninput="progressOutput.value = progressInput.value">
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-group">
        <label for="Participants">Participants</label>
        <partial name="_ProjectParticipantsPartial" />
    </div>
    <hr class="hr-oom w-25" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-warning">Create</button>
    </div>
    <hr class="hr-oom w-25" />
</form>





@section Scripts{
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/js/run-tinymce.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}

