@{
    ViewData["Title"] = "Create Asset";
}

<h4 class="mb-3 text-center">Create Asset</h4>
<hr class="hr-oom" style="width:300px;" />

<form>
    <div class="d-flex justify-content-center">
        <div class="form-row w-75 management">
            <div class="col-12">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inventoryNumber">Inventory number</label>
                        <input type="text" class="form-control" id="inventoryNumber" placeholder="Inventory number">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="assetType">Asset type</label>
                        <select class="form-control" id="assetType">
                            <option selected disabled>--Choose asset's type--</option>
                            <option>Office equipment</option>
                            <option>Software</option>
                            <option>Vehicle</option>
                            <option>Transport</option>
                            <option>Communication</option>
                            <option>Social</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label for="make">Make</label>
                        <input type="text" class="form-control" id="make" placeholder="Make">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="model">Model</label>
                        <input type="text" class="form-control" id="model" placeholder="Model">
                    </div>
                    <div class="form-group col-lg-4">
                        <label for="referenceNumber">Reference number</label>
                        <input type="text" class="form-control" id="referenceNumber" placeholder="Reference number">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4 flatpickrcontainer">
                        <label for="dateOfAquire">Aquired on</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="dateOfAquire" name="dateOfAquire" data-input>
                            <div class="input-group-prepend">
                                <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-8">
                        <label for="employee">Employee</label>
                        <div class="input-group">
                            <select class="form-control selectpicker show-tick" id="employee" name="employee" data-style="btn-white" data-live-search="true" data-width="auto">
                                <option selected disabled></option>
                                <optgroup label="Management Board">
                                    <option>Oniq</option>
                                    <option>Loshiq</option>
                                    <option>Toq</option>
                                </optgroup>
                                <optgroup label="HR">
                                    <option>Oniq</option>
                                    <option>Loshiq</option>
                                    <option>Toq</option>
                                </optgroup>
                                <optgroup label="Accounting">
                                    <option>Oniq</option>
                                    <option>Loshiq</option>
                                    <option>Toq</option>
                                </optgroup>
                                <optgroup label="Engineering">
                                    <option>Oniq</option>
                                    <option>Loshiq</option>
                                    <option>Toq</option>
                                </optgroup>
                                <optgroup label="Administration">
                                    <option>Oniq</option>
                                    <option>Loshiq</option>
                                    <option>Toq</option>
                                </optgroup>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="hr-oom w-25" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-warning">Create</button>
    </div>
    <hr class="hr-oom w-25" />
</form>

@section Scripts{
<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

    document.getElementsByClassName("flatpickrcontainer").flatpickr({
        wrap: true,
        weekNumbers: true,
        dateFormat: "d-m-Y"
    });
</script>
}