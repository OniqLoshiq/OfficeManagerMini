@{
    ViewData["Title"] = "Create";
}

<h4 class="mb-3 text-center">Create Assignment</h4>

<form>
    <div class="form-row">
        <div class="form-group col-md-6 mb-0">
            <label class="sr-only" for="Assignor">Assignor</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning text-secondary">Assignor</div>
                </div>
                <input type="text" class="form-control" id="Assignor" value="OniqLoshiq" disabled>
            </div>
        </div>
        <div class="form-group col-md-6 mb-0">
            <label class="sr-only" for="executor">Executor</label>
            <div class="input-group mb-2">
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning text-secondary">Executor</div>
                </div>
                <select class="form-control selectpicker show-tick" id="executor" name="executor" data-style="btn-white" data-live-search="true">
                    <option selected disabled>To:</option>
                    <optgroup label="Management Board">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="HR">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Accounting">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Engineering">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Administration">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                </select>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col mb-0">
            <label class="sr-only" for="assistants">Assistants</label>
            <div class="input-group mb-1">
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning text-secondary">Assistants</div>
                </div>
                <select class="form-control selectpicker show-tick" id="assistants" name="assistants" data-style="btn-white" data-live-search="true" multiple data-actions-box="true" data-width="auto">
                    <optgroup label="Management Board">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="HR">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Accounting">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Engineering">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                    <optgroup label="Administration">
                        <option>Oniq</option>
                        <option>Loshiq</option>
                        <option>Toq</option>
                    </optgroup>
                </select>
            </div>
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-row">
        <div class="form-group col-md-3 mb-0">
            <label for="type">Style</label>
            <input type="text" class="form-control" id="type">
        </div>
        <div class="form-group col-md-9 mb-0">
            <label for="type">Project</label>
            <input type="text" class="form-control" id="type">
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-row">
        <div class="form-group col-md-3 mb-0">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type">
        </div>
        <div class="form-group col-md-4 flatpickrcontainer mb-0">
            <label for="startingDate">Starting Date</label>
            <div class="input-group">
                <input type="text" class="form-control" id="startingDate" data-input>
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-4 flatpickrcontainer mb-0">
            <label for="deadline">Deadline</label>
            <div class="input-group">
                <input type="text" class="form-control" id="deadline" data-input>
                <div class="input-group-prepend">
                    <div class="input-group-text bg-warning"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="form-group col-md-1 mb-0">
            <label for="priority">Priority</label>
            <select class="form-control" id="priority" name="priority">
                <option selected disabled>0</option>
                @for (int i = 1; i <= 10; i++)
                {
                    <option>@i</option>
                }
            </select>
        </div>
    </div>
    <hr class="hr-oom" />
    <div class="form-group">
        <label for="name">Title</label>
        <input type="text" class="form-control" id="name" placeholder="Title of your assignment">
    </div>
    <div class="form-group">
        <label for="mytextarea">Description</label>
        <textarea id="mytextarea"></textarea>
    </div>
    <hr class="hr-oom" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-warning">Create</button>
    </div>
</form>





@section Scripts{
    <script src="~/lib/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/js/run-tinymce.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>

        // js initialization

        flatpickr.l10ns.default.firstDayOfWeek = 1; // Monday default is sunday

        document.getElementsByClassName("flatpickrcontainer").flatpickr({
            wrap: true,
            weekNumbers: true,
            dateFormat: "d-m-Y"
        });
    </script>
}
